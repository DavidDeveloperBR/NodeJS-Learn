<%- include('../../partials/header.ejs') %>

<%- include('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <% result.articles.rows.forEach(result => {%>
          <div class="card">
              <div class="card-header">
                  <h2><%=result.title %></h2>
              </div>
              <br>
              <div class="card-body">
                  <a href="/<%= result.slug %>" class="btn btn-success">Ler artigo</a>
              </div>
              <br>
          </div>  
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){ %>
                    <a style="float: left" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                <% } else if(result.page == 2){%>
                    <a style="float: left" href="/"><<< Prev</a>
                <% } %>
                <% if(result.page){ %>
                    <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
               <% } %>
              <hr>
          </div>
        </div>
        <hr>
    </div>
</body>

<%- include('../../partials/footer.ejs') %>